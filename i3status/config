# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!
general {
        colors = true
        interval = 2
	color_good = "#6FDF20"
	color_bad = "#e5a435"
	color_degraded = "#FCFC00"
}

order += "wireless _first_"
order += "battery all"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "WLAN: %essid@%ip (%quality)"
        format_down = "WLAN: OFFLINE"
}

battery all {
        format = "%status %percentage"
}

disk "/" {
        format = "DISK: %avail"
}

cpu_usage {
	format = "CPU: %usage"
	max_threshold = 95
	degraded_threshold = 70
	format_above_degraded_threshold = "CPU: WARN %usage"
	format_above_threshold = "CPU HIGH %usage"
}

memory {
        format = "MEM %available"
        threshold_degraded = "1G"
        format_degraded = "MEM LOW  %available"
}

tztime local {
        format = "%H:%M:%S %d-%m-%Y"

}
